  "working_directory": "/opt/script-server/conf/scripts/",
  "description": "Select a container to Update Now with Watchtower",
  "allowed_users": [
    "*"
  ],
  "include": "${Simple Text}.json",
  "parameters": [
    {
      "name": "Updates available",
